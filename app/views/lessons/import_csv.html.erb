        <%= form_with url: import_csv_lessons_path, method: :post, class: "mb-3", multipart: true do |f| %>
          <div class="input-group">
            <%= f.file_field :file, accept: ".csv", class: "form-control" %>
            <button type="submit" class="btn btn-warning">Subir</button>
