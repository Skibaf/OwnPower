
<div class="container py-5">
  <div class="col">
     <h3> Actualizar pago de la reserva</h3>
      <div class="card h-100" style="max-width: 500px;">
        <div class="card-body">
                <!-- edit_status.html.erb -->
                 <%= form_with(model: @reservation, url: reservation_path(@reservation), method: :put) do |form| %>
                  
                  <ul class="list-group list-group-flush">
                   <li class="list-group-item">
                      <div class="mb-3">
                          <label class="fw-bold">ID Reserva:</label>
                          <span><%= @reservation.id %></span>
                        </div>
                        <div class="mb-3">
                          <label class="fw-bold">ID Clase:</label>
                          <span><%= @reservation.lesson_id %></span>
                        </div>
                        <div class="mb-3">
                          <label class="fw-bold">ID Clase:</label>
                          <span><%= @reservation.user.email %></span>
                        </div>
                      </li>
                      <li class="list-group-item">
                            <div class="mb-3">
                              <%= form.label :status, "Estado", class: "form-label text-dark" %><span class="text-danger">*</span>
                              <%= form.select :status, Reservation.statuses.keys.map { |w| [w.humanize, w] }, { include_blank: "Seleccionar nuevo estado" }, { class: "form-select" } %>
                            </div>
                            
                            <div class="mb-3">
                       
                              <%= form.label :payment, "Pago", class: "form-label text-dark" %><span class="text-danger">*</span>
                              <%= form.text_field :payment, class: "form-control" %>
                            </div>
                            <%= form.submit "Guardar pago efectivo", class: "btn btn-warning" %>
                          <% end %>
                      </li>
          </div>
        </div>
       </div>
        <Br/>
        <div class="mt-3">
            <ul class="form-but">
              <%= link_to "Cancelar y volver a mis clases", lessons_path, class: "btn btn-outline-secondary rounded-pill float-end" %>
            </ul>
        </div>
      
</div>

