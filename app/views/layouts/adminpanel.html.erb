
  <!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Panel de Admin</title>
      <%= csrf_meta_tags %>
       <%= csp_meta_tag %>
       <meta name="viewport" content="width=device-width,initial-scale=1">
       <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
      <%= stylesheet_link_tag "custom_admin_panel", "data-turbo-track": "reload" %>
      <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <div class="col-md-2 d-none d-md-block bg-gray sidebar">
        <div class="sidebar-sticky">
          <ul class="nav flex-column">
            <div class="container">
                       <a class="navbar-brand" href="/"> <img src="../images/logo-no-background.svg" alt="logo" style= "width: 120px; height:40px" ></a>
                           <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                           </button>
                 </div>
                 <h4>Admin Panel</h4>
                <li class="nav-item">
                          <ul class="nav-link">
                                <%= link_to 'Usuarios', admin_users_path %>
                          </ul>
                            <ul class="nav-link">
                                <%= link_to 'Categorias', categories_path %>
                            </ul>

                            <ul class="nav-link">
                                <%= link_to 'Cursos', lessons_path %>
                            </ul>
                </li>
          </ul>
        </div>
      </div>

      <!-- Ãrea Principal -->
      <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
        <%= yield %>
      </main>
    </div>
  </div>

  <!-- Agrega tus scripts, como Bootstrap y TurboLinks (si es necesario) -->
  <!-- Ejemplo: -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.1/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
